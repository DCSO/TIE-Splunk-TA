<setup>
  	<block title="Configuration of DCSO TA TIE">
    		<text>Setup page for the app</text>
  	</block>

  	<block title="General TIE Setup">
		<text> This is the basic setup</text>
		<input field="token" endpoint="tie/tiesetupendpoint" entity="tie">
			<font color="red"><b>*</b></font>
      			<label>Token:</label>
      			<type>text</type>
    		</input>
	</block>

        <block title="Configure TIE Filter" endpoint="tie/tiefilterendpoint" entity="filter" >
                <text> Configure your Filter</text>
                <input field="ip_confidence">
                        <label>Confidence for IP:</label>
                        <type>text</type>
                </input>
		<input field="ip_severity">
                        <label>Severity for IP:</label>
                        <type>text</type>
                </input>
		<input field="dom_confidence">
                        <label>Confidence for Domain:</label>
                        <type>text</type>
                </input>
		<input field="dom_severity">
                        <label>Severity for Domain:</label>
                        <type>text</type>
                </input>
		<input field="url_confidence">
                        <label>Confidence for URL:</label>
                        <type>text</type>
                </input>
		<input field="url_severity">
                        <label>Severity for URL:</label>
                        <type>text</type>
                </input>
		<input field="email_confidence">
                        <label>Confidence for Email:</label>
                        <type>text</type>
                </input>
		<input field="email_severity">
                        <label>Confidence for Email:</label>
                        <type>text</type>
                </input>
		<input field="confidence">
                        <label>Confidence for General:</label>
                        <type>text</type>
                </input>
		<input field="severity">
                        <label>Severity for General:</label>
                        <type>text</type>
                </input>

        </block>


	<block title="Enable Scrips" endpoint="data/inputs/script" entity=".%2Fbin%2Ftie2index.py"> 
		<text> Uncheck to enable </text>
		<input  field="disabled">
                        <label>tie2index.py</label>
                        <type>bool</type>
                </input>
                <input  field="interval">
                        <label>How often update (in seconds)</label>
                        <type>text</type>
                </input>
		<text> 
			&lt;i&gt;The Index must be known on the HF.&lt;/i&gt;
		</text>
                <input  field="index">
                        <label>Into which index?</label>
                        <type>text</type>
                </input>

	</block>

        <block title="Configure Proxy" endpoint="tie/tieproxyendpoint" entity="proxy">
                <text> Leave clear if unused </text>
                <input  field="host">
                        <label>Host:</label>
                        <type>text</type>
                </input>
                <input  field="port">
                        <label>Port:</label>
                        <type>text</type>
                </input>
                <input  field="user">
                        <label>User:</label>
                        <type>text</type>
                </input>
                <input  field="password">
                        <label>Password:</label>
                        <type>text</type>
                </input>
        </block>

</setup>
